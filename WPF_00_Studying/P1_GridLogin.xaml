<Page x:Class="WPF_00_Studying.P1_GridLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_00_Studying"
        mc:Ignorable="d"
        Title="Login" Height="250" Width="400">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="아이디" HorizontalAlignment="Left" Height="28" Margin="73,39,0,0" VerticalAlignment="Top" Width="61"/>
        <Label Grid.Row="1" Content="비밀번호" HorizontalAlignment="Left" Height="28" Margin="73,0,0,0" VerticalAlignment="Center" Width="61" RenderTransformOrigin="0.392,-1.8"/>
        <TextBox x:Name="TextBox_Id" HorizontalAlignment="Left" Height="26" Margin="161,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Background="LightGray"/>
        <TextBox x:Name="TextBox_Password" Grid.Row="1" HorizontalAlignment="Left" Height="26" Margin="161,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="190" Background="LightGray"/>
        <Button x:Name="Button_Login" Grid.Row="2" Content="로그인" HorizontalAlignment="Center" Height="28" Margin="0,22,0,0" VerticalAlignment="Top" Width="75" Click="btnLogin_Click" />
    </Grid>
</Page>